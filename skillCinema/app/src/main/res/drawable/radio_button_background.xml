<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Состояние выбранной кнопки -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue"/> <!-- Цвет фона выбранной кнопки -->
            <corners android:radius="8dp"/> <!-- Закругленные углы -->
            <stroke android:width="1dp" android:color="@color/black"/> <!-- Обводка -->
        </shape>
    </item>

    <!-- Состояние невыбранной кнопки -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- Цвет фона невыбранной кнопки -->
            <corners android:radius="8dp"/> <!-- Закругленные углы -->
            <stroke android:width="1dp" android:color="@color/black"
                /> <!-- Обводка -->
        </shape>
    </item>
</selector>